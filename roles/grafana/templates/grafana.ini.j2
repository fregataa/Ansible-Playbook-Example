# Grafana Configuration
# Generated by Ansible - Do not edit manually

[paths]
data = {{ grafana_data_dir }}
logs = /var/log/grafana
plugins = {{ grafana_plugins_dir }}
provisioning = {{ grafana_provisioning_dir }}

[server]
protocol = http
http_addr = 0.0.0.0
http_port = {{ grafana_port }}
domain = localhost
root_url = %(protocol)s://%(domain)s:%(http_port)s/

[database]
type = sqlite3
path = grafana.db

[session]
provider = file
provider_config = sessions

[analytics]
reporting_enabled = false
check_for_updates = false

[security]
admin_user = {{ grafana_admin_user }}
admin_password = {{ grafana_admin_password }}
secret_key = {{ lookup('password', '/dev/null length=32 chars=ascii_letters,digits') }}
disable_gravatar = true

[users]
allow_sign_up = false
allow_org_create = false
auto_assign_org = true
auto_assign_org_role = Viewer

[auth.anonymous]
enabled = {{ grafana_allow_anonymous | lower }}
{% if grafana_allow_anonymous %}
org_role = {{ grafana_anonymous_org_role }}
{% endif %}

[log]
mode = {{ grafana_log_mode }}
level = {{ grafana_log_level }}

[log.console]
format = text

[log.file]
format = text
log_rotate = true
max_lines = 1000000
max_size_shift = 28
daily_rotate = true
max_days = 7

[alerting]
enabled = false  # Prometheus Alertmanager 사용

[unified_alerting]
enabled = false  # Prometheus Alertmanager 사용

[dashboards]
default_home_dashboard_path = {{ grafana_provisioning_dir }}/dashboards/gpu-overview.json
